@using vhrm.ViewModels
@model DeptViewModel
<div class="row" style="margin-top:5px;margin-left:5px">
    <div>
        <span class="input-group-btn">
            <button type="button" id="btnAddnew" class="btn btn-default btn-sm btnOpacity" title="Add new"><i class="fa fa-plus"></i></button>
            <button type="submit" id="btnSave" class="btn btn-default btn-sm btnOpacity" title="Save" style="margin-left:5px;"><i class="fa fa-save"></i></button>
            <button type="button" id="btnCancel" class="btn btn-default btn-sm btnOpacity" title="Cancel" style="margin-left:5px;"><i class="fa fa-ban"></i></button>
            <button type="button" id="btnReset" class="btn btn-default btn-sm btnOpacity" title="Reset" style="margin-left:5px;"><i class="fa fa-file"></i></button>
        </span>
    </div>
</div>
<div class="clearfix"></div>
<div class="row" style="margin:20px;">
    <form class="form-horizontal" style="width: 100%;">
        <div class="form-group row">
            <label for="" class="col-md-4 col-form-label-sm" style = "text-align: right;">Parents Level</label>
            <div class="col-md-6">
                <div class="demo-section k-content">
                    @(Html.Kendo().DropDownTree()
                                                                                                   .Name("dropdowntree")
                                                                                                   .DataTextField("DEPTNAME")
                                                                                                   .HtmlAttributes(new { style = "width: 100%" })
                                                                                                   .DataValueField("DEPTCODE")
                                                                                                   .LoadOnDemand(false)
                                                                                                   .DataSource(dataSource => dataSource
                                                                                                   .Model(m => m
                                                                                                               .Id("DEPTCODE")
                                                                                                               //.Children("FunctionReportViewModels")
                                                                                                               )
                                                                                                       .Read(read => read
                                                                                                           .Action("getGeOrganizations", "GeoOrganization")
                                                                                                       )
                                                                                                   ).Filter("contains")
                                                                                                   .Events(events => events
                                                                                                               .Change("onChangeDropdown")
                                                                                                               .Select("onSelectDropdown")
                                                                                                               .DataBound("onDataBindingDropdown")
                                                                                                       )//.Value("000000")
                    )                  
                </div>
            </div>
            <div class="col-md-2">                
                <button type="button" id="btnEdit" class="btn btn-default btn-sm btnOpacity" title="Edit"><i class="fa fa-edit"></i></button>
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-md-4 col-form-label-sm" style = "text-align: right;">Organization Name</label>
            <div class="col-md-6">
                <input type="text" disabled="disabled" name="txtOrganizationName" value="@ViewBag.deptName" data-val="true" data-val-required="The Organization Name is required" style="height: 30px; font-size: smaller" class="form-control form-control-sm" id="txtOrganizationName" placeholder="">
                @*<span class="text-danger" data-valmsg-for="txtOrganizationName" data-valmsg-replace="true">The Organization Name is required</span>*@
            </div>
            <div class="col-md-2">
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-md-4 col-form-label-sm" style = "text-align: right;">Order Index</label>
            <div class="col-md-3">
                <input type="number" disabled="disabled" data-msg-number="The Order Index must be a number." data-rule-number="true" value="" style="height: 30px; font-size: smaller" class="form-control form-control-sm" name="txtOrderIndex" id="txtOrderIndex" placeholder="0">
                @*<span class="text-danger" data-valmsg-for="txtOrderIndex" data-valmsg-replace="true">The Order Index must be a number</span>*@
            </div>
            <div class="col-md-5">
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-md-4 col-form-label-sm"></label>
            <div class="col-md-4">
                <label class="form-check-label">
                    <input type="checkbox" disabled="disabled"  id="chkActive"> Actived
                </label>
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </form>
</div>

