@model vhrm.FrameWork.Entity.eGeoReportItem
<div id="form_editor" style="height: 200px">
    <div class="container">
        @*<input type="hidden" class="form-control" id="menu_is_active" name="IsActive" value="" />*@
        <div class="row">
            <div class="col-sm" style="max-width: 400px">
                <div class="form-group">
                    <label for="formGroupExampleInput">Employee</label>
                    <input type="hidden" class="form-control" id="SYS_EMPID" name="SYS_EMPID" />
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" id="emp_name" name="EMPNAME" placeholder="" data-bind="value:EMPNAME" readonly>
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button" onclick="openDialog()">Choose</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm">
                <div class="form-group">
                    <label for="formGroupExampleInput">Valid Date</label>
                    @*<input type="date" class="form-control" id="report_code" name="APPLYDATE" placeholder="Valid Date" data-bind="value:APPLYDATE">*@
                    @(Html.Kendo().DatePickerFor(m => m.APPLYDATE)
                        .HtmlAttributes(new { @class = "form-control" })
                    //.Format("{0:dd/MM/yyyy}")
                    //.DateInput()
                    )
                </div>
            </div>
            <div class="col-sm">
                <div class="form-group" style="margin-top: 37px;">
                    <div class="form-check">
                        @*<input class="form-check-input" type="checkbox" value="" id="defaultCheck1">*@
                        @(Html.Kendo().CheckBoxFor(m => m.ISACTIVE)
                            .HtmlAttributes(new { @class = "form-check-input", id = "is_active" })
                        )
                        <label class="form-check-label" for="is_active">
                            Active
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>