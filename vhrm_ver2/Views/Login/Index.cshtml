
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/libs/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/libs/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/libs/nprogress/nprogress.css" rel="stylesheet" />
    <link href="~/libs/animate.css/animate.css" rel="stylesheet" />
    <link href="~/assets/css/custom.css" rel="stylesheet" />
</head>
<body class="login">

        

        <div class="login_wrapper">           
                <section class="login_content">
                    <form action="/Login/DoLogin" method="post">
                        <div class="logo-login">            
                            <img src="~/assets/images/PK_logo---white.png" />
                        </div>
                       
                            <input type="text" class="form-control" placeholder="Username" name="UserId" required="" />
                         
                            <input type="password" class="form-control" placeholder="Password" name="Password" required="" />
                    
                     
                   
                            <div class="login-button">  <input type="submit" class="btn btn-default submit" value="Login" /></div>
                            
                    

                        <div class="clearfix"></div>

                
                    </form>
                </section>
            
        </div>
    
</body>
</html>
