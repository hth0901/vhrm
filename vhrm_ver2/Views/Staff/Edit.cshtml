        $('#SKILL').prop('disabled', 'disabled');


        $('#GEODIRECTSYSIDREPORT_Code').autocomplete
            (
                {
                    minLength: 0,
                    source: function (request, response) {
                        $.ajax({
                            url: "/Staff/getUserInGeoReportByDeptCode",
                            type: "POST",
                            dataType: "json",
                            data: { deptCode: $("#GEOGRAPHICALORG").val() },
                            success: function (data) {
                                response($.map(data, function (item) {
                                    return { value: item.EMPID, label: item.EMPNAME };
                                }))
                            }
                        })
                    },
                    focus: function (event, ui) {
                        $("#GEODIRECTSYSIDREPORT_Code").val(ui.item.value);
                        return false;
                    },
                    select: function (event, ui) {
                        $('#DISPLAYGEODIRECTREPORT').val(ui.item.label);
                        $("#GEODIRECTREPORT").val(ui.item.data);
                        return false;
                    }
                }
            ).data("ui-autocomplete")._renderItem = function (ul, item) {
                var str = item.label;
                var array = str.split(",");
                console.log(array[0]);
                console.log(array[1]);
                var template = '<div class="row">' +
                    '<div class="col-md-1" id="selectedGeoUser" data=' + array[1] + '>' +
                    '<i class="fa fa-user"></i> | ' + '( ' + item.value + ' ) ' + array[0] +
                    '</div>' +
                    '</div>';
                item.label = array[0];
                item.data = array[1];
                return $('<li class="autocomplete-template">')
                    .data("item.autocomplete", item)
                    .append(template)
                    .appendTo(ul);
            };

