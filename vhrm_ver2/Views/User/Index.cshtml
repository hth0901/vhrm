
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/vhrmLayoutBlock.cshtml";
}
<style>
    .customer-photo {
        display: inline-block;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background-size: 32px 35px;
        background-position: center center;
        vertical-align: middle;
        line-height: 32px;
        box-shadow: inset 0 0 1px #999, inset 0 0 10px rgba(0,0,0,.2);
        margin-left: 5px;
    }

    .customer-name {
        display: inline-block;
        vertical-align: middle;
        line-height: 32px;
        padding-left: 3px;
    }

    .k-edit-form-container {
        width: 600px;
    }
</style>

@(Html.Kendo().Grid<vhrm.FrameWork.Entity.eDepartmentDetailItem>()
    .Name("grid")
    .AutoBind(true)
    .Columns(columns =>
    {
        //columns.Bound(c => c.LEVEL1_CODE).Width(70);
        columns.Bound(c => c.LEVEL1_NAME).Width(200);
        //columns.Bound(c => c.LEVEL2_CODE).Width(70);
        columns.Bound(c => c.LEVEL2_NAME).Width(200);
        //columns.Bound(c => c.LEVEL3_CODE).Width(70);
        columns.Bound(c => c.LEVEL3_NAME).Width(200);
        //columns.Bound(c => c.LEVEL4_CODE).Width(70);
        columns.Bound(c => c.LEVEL4_NAME).Width(200);
        //columns.Bound(c => c.LEVEL5_CODE).Width(70);
        columns.Bound(c => c.LEVEL5_NAME).Width(200);
        columns.Bound(c => c.DEPTNAME).Width(200);
        columns.Bound(c => c.DEPTCODE).Width(70);
        columns.Bound(c => c.DEPTLEVEL).Width(40);
    })
    //.Editable(editable => editable.Mode(GridEditMode.PopUp).TemplateName("EmployeeEditor"))
    .ToolBar(toolbar =>
    {
        toolbar.Excel();
    })
    .HtmlAttributes(new { style = "height: 920px" })
    .Scrollable()
    .Sortable()
    .Excel(excel =>
    {
        excel.FileName("hihihaha.xlsx");
        excel.AllPages(true);
        //excel.ProxyURL(Url.Action("Excel_export_save", "Form"));
    })
    //.ClientDetailTemplateId("kendotemplate")
    .Pageable(pageable => pageable
        .Refresh(true)
        .PageSizes(false)
        .ButtonCount(5))
    .DataSource(dataSource => dataSource
        .Ajax()
        .Read(read => read.Action("deptDetailQuery", "User"))
        .ServerOperation(false)
        .PageSize(20)
    )
)


